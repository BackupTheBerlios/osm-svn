<?xml version="1.0" encoding="ISO-8859-1"?>
<library xmlns="link:xsd:dpml/lang/dpml-module#1.0">

  <imports>
    <import uri="link:module:ant"/>
    <import uri="link:module:dpml"/>
  </imports>

  <modules>

    <module name="acme">

      <project name="acme-demo" basedir=".">
        <types>
          <type id="jar"/>
          <component xmlns="link:xsd:dpml/lang/dpml-component#1.0"
              type="org.acme.tutorial.SimpleWidget">
            <context>
              <entry key="owner" value="${user.name}"/>
              <entry key="activity" value="Painting"/>
              <entry key="target" value="house"/>
            </context>
          </component>
        </types>
        <dependencies>
          <test>
            <include ref="dpml/metro/dpml-metro-tools"/>
          </test>
        </dependencies>
        <filters>
          <feature id="filename" type="part" token="PATH"/>
        </filters>
      </project>
    
    </module>

  </modules>

</library>
