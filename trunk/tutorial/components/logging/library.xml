<?xml version="1.0" encoding="ISO-8859-1"?>
<library xmlns="link:xsd:dpml/lang/dpml-module#1.0">

  <imports>
    <import uri="link:module:ant"/>
    <import uri="link:module:dpml"/>
  </imports>

  <modules>

    <module name="org/acme">

      <project name="acme-logging-demo" basedir=".">
        <properties>
          <property name="project.test.fork" value="true"/>
        </properties>
        <types>
          <type id="jar"/>
          <component xmlns="link:xsd:dpml/lang/dpml-component#1.0" 
             type="org.acme.logging.Demo" 
             name="demo"/>
        </types>
        <dependencies>
          <runtime>
            <include ref="dpml/util/dpml-logging-api"/>
          </runtime>
          <test>
            <include ref="ant/ant-junit"/>
            <include ref="dpml/metro/dpml-metro-tools"/>
          </test>
        </dependencies>
        <filters>
          <feature id="filename" type="part" token="PATH"/>
        </filters>
      </project>
    
    </module>

  </modules>

</library>
